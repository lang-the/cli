fn Packager_install (name: str, version: str) {
  tmpPath := path_tempDirectory()
  gitUrl := "https://github.com/" + name + ".git"

  process_runSync("git clone --depth=1 https://github.com/thelang-io/the.git " + tmpPath)
}

