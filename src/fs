// todo v0.15 - replace with one-liner
fn chmodAddSync (path: str, mode: int) {
  stat := fs_statSync(path)
  fs_chmodSync(path, stat.mode | mode)
}

// todo v0.13 - replace with fs_copyFileSync
fn copyFileSync (src: str, dest: str) {
  data := fs_readFileSync(src)
  fs_writeFileSync(dest, data)
}
